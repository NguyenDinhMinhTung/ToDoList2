<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#242424"
        android:paddingBottom="@dimen/line_thinkness"
        android:paddingTop="@dimen/line_thinkness">

        <RelativeLayout
            android:id="@+id/txvTitleAddEvent"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="タイトル"
                android:textSize="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


            <EditText
                android:id="@+id/txtTitleAddEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_toRightOf="@id/txvTitleAddEvent"
                android:layout_toLeftOf="@id/ckbAllDayAddEvent"
                android:layout_marginLeft="@dimen/line_thinkness"/>

            <CheckBox
                android:id="@+id/ckbAllDayAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:text="全日"
                android:paddingRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_thinkness">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="時間"
                android:textSize="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/line_thinkness">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2012/02/02"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:02"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_thinkness">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="通知"
                android:textSize="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/line_thinkness"
          android:background="@color/white"></Spinner>
    </LinearLayout>
</LinearLayout>