<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#242424"
        android:paddingBottom="@dimen/line_think"
        android:paddingTop="@dimen/line_think">

        <RelativeLayout
            android:id="@+id/txvTitleAddEvent"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="タイトル"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


            <EditText
                android:id="@+id/txtEventNameAddEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_toRightOf="@id/txvTitleAddEvent"
                android:layout_toLeftOf="@id/ckbAllDayAddEvent"
                android:paddingLeft="10dp"
                android:lines="1"
                android:maxLength="30"
                android:layout_marginLeft="@dimen/line_think"/>

            <CheckBox
                android:id="@+id/ckbAllDayAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:text="全日"
                android:paddingRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_think">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="時間"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/line_think">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">
                <TextView
                    android:id="@+id/btnDateAddEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2012/02/02"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">
                <TextView
                    android:id="@+id/btnTimeAddEven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:02"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_think">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="通知"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/txtNotifyAddEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/line_think"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:text="0"
            android:inputType="numberDecimal"
            android:maxLength="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_think">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="色"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <Spinner
            android:id="@+id/spnColorAddEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/line_think"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#242424"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_think">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="コメント"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/txtCommentAddEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:lines="1"
            android:layout_marginLeft="@dimen/line_think"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnAddAddEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="追加"
            android:background="@drawable/button_green"/>

        <Button
            android:id="@+id/btnCancelAddEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="キャンセル"/>
    </LinearLayout>
</LinearLayout>